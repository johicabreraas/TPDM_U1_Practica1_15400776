<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main6Activity"
    android:background="#BFCEC7">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desafiando a la Naturaleza"
        android:gravity="center"
        android:padding="40dp"
        android:textSize="25dp"
        android:id="@+id/titulo"
        />

    <ImageView
        android:id="@+id/imagen6"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/seis"
        android:layout_below="@+id/titulo"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En una ocasion fui de visita con unos amigos a Ciudad del Carmen y como vivian cerca de la playa un dia pudimos apreciar una fuerte tormenta que se aproximaba y decidimos salir a ver, la tormenta azoto muy fuerte la zona"
        android:layout_below="@id/imagen6"
        android:layout_marginBottom="20dp"
        android:id="@+id/description"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="22dp"
        />
        <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:layout_below="@id/description"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            style="@style/AppTheme.Botonregresar"
            android:id="@+id/boton6"
            />
    </LinearLayout>
</ScrollView>