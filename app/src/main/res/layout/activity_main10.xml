<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main10Activity"
    android:background="#BFCEC7">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Huerto de Calabazas"
        android:gravity="center"
        android:padding="40dp"
        android:textSize="30dp"
        android:id="@+id/titulo"
        />


    <ImageView
        android:id="@+id/imagen10"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@+id/titulo"
        android:layout_marginTop="-26dp"
        android:src="@drawable/diez"
        android:textAlignment="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En una ocacion fuimos de visita con unos familiares que tienen ciembras de distintas cosas como maiz sandias y calaazas, durante la noche empezamos a hablar de que podriamos hacer y una tia nos dijo que a ella tiene la receta de empanadas de calabaza pero le faltaban las calabazas al dia siguiente solo los vimos llegar a ellos de esta manera"
            android:layout_below="@id/imagen10"
            android:layout_marginBottom="20dp"
            android:id="@+id/description"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="22dp"
            />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:layout_below="@id/description"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_gravity="center"
        style="@style/AppTheme.Botonregresar"
        android:id="@+id/boton10"
        />
    </LinearLayout>
</ScrollView>